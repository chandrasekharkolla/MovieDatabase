<%= form_for(@movie) do |f| %>
	
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :Rating %>
		<%= f.number_field :rating, placeholder: "Rating", class: 'form-control' %>
	</div>
	
	<%= f.submit yield(:btn), class: 'btn btn-primary active' %>
<% end %>