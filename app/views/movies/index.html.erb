<div class="container">
	<div class="row">
		<div class="col-md-5 col-md-offset-3">
			<h1 class="text-center">Movies List</h1>
			<div class="text-center">
				<%= link_to "Add New Movie", new_movie_path, class: 'btn btn-danger active' %>
			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<td class="text-center"><strong>Title</strong></td>
						<td class="text-center"><strong>Description</strong></td>
						<td class="text-center"><strong>Rating</strong></td>
						<td class="text-center"><strong>Actions</strong></td>
					</tr>
				</thead>
				<tbody>
					<%= render @movies %>
				</tbody>
			</table>
		</div>
	</div>	
</div>